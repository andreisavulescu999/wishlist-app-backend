// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  username      String?
  first_name    String?
  last_name     String
  password      String
  email         String   @unique
  age           Int?
  birthday      DateTime?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  deleted_at    DateTime?
  // chats         Chat[]
  groups        Groups[]
  userchat      UserChatGroups[]
  products      Products[]
  // userwishlist  UserWishlists[]
  @@map("users")
}

model Chat {
  id            Int       @id @default(autoincrement())
  group_id      Int 
  text          String?
  status_read   Boolean
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  deleted_at    DateTime? 

  @@map("chat")
}

model Groups {
  id            Int       @id @default(autoincrement())
  creator_id    Int 
  wishlist_id   Int 
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  deleted_at    DateTime?
  author        User      @relation(fields: [creator_id], references: [id])
  wishlist      Wishlists @relation(fields: [wishlist_id], references: [id])

  @@map("groups")
}
model UserChatGroups {
  id              Int       @id @default(autoincrement())
  user_id         Int 
  whislist_id     Int 
  status_read     Boolean
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  deleted_at      DateTime?
  author          User      @relation(fields: [user_id], references: [id])

  @@map("userchatgroups")
}
model Products {
  id            Int       @id @default(autoincrement())
  name          String
  user_id       Int      
  features      Json
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  deleted_at    DateTime?
  author        User      @relation(fields: [user_id], references: [id] ,onUpdate: Cascade, onDelete: Cascade)
  @@map("products")
}


model Wishlists {
  id            Int      @id @default(autoincrement())
  user_id       Int 
  product_id    Json?
  name          String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  deleted_at  DateTime?

  groups Groups[]
  userwishlist UserWishlists[]
  @@map("wishlists")
}

model UserWishlists {
  id            Int      @id @default(autoincrement())
  wishlist_id   Int
  // creator_id    Int 
  purchased     Boolean  @default(false)
  purchased_by  Json?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  deleted_at    DateTime?
  wishlist      Wishlists @relation(fields: [wishlist_id], references: [id] ,onUpdate: Cascade, onDelete: Cascade)
  // author        User      @relation(fields: [creator_id], references: [id])
  @@map("userwishlists")
}